/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {
    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: 'RFAM_DOWNLOAD' {
        publishDir = [
            path: { "${params.rfam_cache_dir}/${params.rfam_release ?: 'CURRENT'}" },
            mode: 'copy',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'INFERNAL_CMPRESS' {
        publishDir = [
            path: { "${params.rfam_cache_dir}/${params.rfam_release ?: 'CURRENT'}" },
            mode: 'copy',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'INFERNAL_CMSCAN' {
        // Note: -E and -T are mutually exclusive in cmscan
        // We use -E for initial filtering, then filter by score in post-processing
        ext.args = { [
            "-E ${params.cmscan_evalue}",
            "--noali"
        ].join(' ') }
        publishDir = [
            path: { "${params.outdir}/cmscan" },
            mode: params.publish_dir_mode,
            pattern: "*.tblout",
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'INFERNAL_CMALIGN' {
        ext.args = "--notrunc"
        publishDir = [
            path: { "${params.outdir}/alignments" },
            mode: params.publish_dir_mode,
            pattern: "*.sto",
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'CONSENSUS_PROJECTION' {
        publishDir = [
            path: { "${params.outdir}/structures" },
            mode: params.publish_dir_mode,
            pattern: "*.dbn",
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'GENERATE_SUMMARY' {
        publishDir = [
            path: { "${params.outdir}/reports" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}
